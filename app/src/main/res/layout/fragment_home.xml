<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F9"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Emoji -->
        <TextView
            android:id="@+id/status_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ˜Ž"
            android:textSize="72sp"
            android:layout_marginBottom="16dp" />

        <!-- Greeting -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, hereâ€™s your daily score"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <!-- Stress Status -->
        <TextView
            android:id="@+id/stress_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Great"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#111111"
            android:layout_marginBottom="12dp" />

        <!-- Dot Rating Bar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Inactive Dots -->
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_circle"
                android:backgroundTint="#F08080" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_circle"
                android:backgroundTint="#F4A460" />

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_circle"
                android:backgroundTint="#A9A9F5" />

            <!-- Active Dot -->
            <View
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/dot_circle"
                android:backgroundTint="#55D88A" />
        </LinearLayout>

        <!-- HRV & RHR Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:weightSum="2">

            <!-- HRV -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg. HRV Today"
                    android:textColor="#555"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/hrv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ms"
                    android:textSize="12sp"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â–² recent avg. 36ms"
                    android:textSize="12sp"
                    android:textColor="#228B22"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- RHR -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RHR"
                    android:textColor="#555"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rhr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="66"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bpm"
                    android:textSize="12sp"
                    android:textColor="#999999" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â–² recent avg. 63bpm"
                    android:textSize="12sp"
                    android:textColor="#D32F2F"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Health Summary -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:text="Life should be balanced, itâ€™s okay to take a break.\n\nConsidering your HRV and RHR today, your overall state is excellent, and your bodyâ€™s stress levels are low. You can effectively deal with the challenges today."
            android:textColor="#444"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Last Updated -->
        <TextView
            android:id="@+id/last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last updated at 19:46"
            android:textColor="#999"
            android:textSize="12sp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</ScrollView>
