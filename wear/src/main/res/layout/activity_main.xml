<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:baselineAligned="false">

            <!-- STRESS SECTION -->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"

                android:elevation="6dp"
                android:layout_marginBottom="20dp"
                android:padding="16dp">

                <TextView
                    android:id="@+id/emoji_stress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ˜Œ"
                    android:textSize="48sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/stress_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are"
                    android:textSize="14sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/stress_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relaxed"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- STEP CARD -->
            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_steps_rounded"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="6dp"
                android:layout_marginBottom="16dp"
                android:padding="12dp">

                <TextView
                    android:id="@+id/step_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps"
                    android:textSize="13sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/step_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,482"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- WATER CARD -->
            <LinearLayout
                android:id="@+id/water_card"
                android:layout_width="240dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_water_rounded"
                android:orientation="vertical"
                android:gravity="center"
                android:elevation="6dp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/water_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water Intake"
                    android:textSize="13sp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/water_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 ml / 2000 ml"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.wear.widget.BoxInsetLayout>
